<launch>
    <!-- Navigation Program   -->
    <arg name="vx" default="0.2"/>
    <arg name="vy" default="0.0"/>
    <arg name="w" default="0"/>
    <arg name="td" default="2"/>

    <node
        pkg="my_robot_control" exec="my_robot_control_node" output="screen">
            <param name="vx" value="$(arg vx)"/>
            <param name="vy" value="$(arg vy)"/>
            <param name="w" value="$(arg w)"/>
            <param name="td" value="$(arg td)"/>
    </node>
</launch>